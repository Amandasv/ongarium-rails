<%= f.fields_for :address do |a| %>
	<div class="row">
		<div class="col-lg-offset-2 form-group">
			<div class="col-lg-3">
				<label class="control-label", for="inputZipcode">CEP: <span class="mandatory">*</span></label>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-offset-2">
			<div class="col-lg-3">
				<%= a.text_field :zipcode, :id => "inputZipcode", :class => "form-control cep validate-zipcode", :autocomplete => :off  %>
			</div>
		</div>
		<div>
			<%=image_tag("ajax-loader.gif", id:"ajax-loader")%>
			<%= link_to "não sei meu CEP", "http://www.buscacep.correios.com.br/sistemas/buscacep/buscaCep.cfm", :target => "_blank" %>
		</div>

	</div>

	<div class="row margin-end-top margin-end-bot">
		<div class="col-lg-offset-2 form-group">
			<div class="col-lg-5">
				<%= a.label "Endereço: ", :class => "control-label", :for => "inputAddress"%>
				<%= a.text_field :address, :id => "inputAddress", :class => "form-control margin-address", :readonly => true, :placeholder => "Digite o CEP acima" %>
			</div>
			<div class="col-lg-2">
				<%= a.label "Número: ", :class => "control-label", :for => "inputNumber"%>
				<%= a.text_field :number, :id => "inputNumber", :class => "form-control"%>
			</div>
			<div class="col-lg-2">
				<%= a.label "Complemento: ", :class => "control-label", :for => "inputComplement"%>

				<%= a.text_field :complement, :class => "form-control", :id => "inputComplement"%>
			</div>
		</div>
	</div>
	<div class="row margin-end-top margin-end-bot">
		<div class="col-lg-offset-2">
			<div class="col-lg-3 form-group">
				<%= a.label "Bairro: ", :class => "control-label", :for => "inputNeighborhood" %>
				<%= a.text_field :neighborhood, :id => "inputNeighborhood", :class => "form-control", :readonly => true, :placeholder => "Digite o CEP acima"  %>
			</div>
			<div class="col-lg-4">
				<%= a.label "Cidade: ", :class => "control-label", :for => "inputCity"%>
				<%= a.text_field :city, :id => "inputCity", :class => "form-control", :readonly => true, :placeholder => "Digite o CEP acima"%>
			</div>

			<div class="col-lg-1">
				<%= a.label "Estado: ", :class => "control-label", :for => "inputState"%>
				<%= a.text_field :state, :id => "inputState", :class => "form-control", :readonly => true %>
			</div>
		</div>
	</div>
<% end %>
