<div class="container">
	<div class="volunteer-interests">
		<div>
			<h3 class="">Meus Interesses:</h3>
		</div>
		<% @volunteer.interests.each do |interest| %>	
			<div class="panel">
				<div class="row panel-body detailopp bs-callout bs-callout-info">
					<div class="row">
						<div class="col-lg-10 interest-title">
							<h3><%= interest.opportunity.title %></h3>
						</div>						
					</div>
					<div class="row">
						<div class="col-lg-12 oppt-ngo">
							<span>Por <%= interest.opportunity.ngo.name %></span>
						</div>
					</div>
					<div class="row"> 
						<div class="col-lg-12 description">
							<%= interest.opportunity.description %>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-4">
							<span><%= interest.opportunity.address.city %>, 
								<%= interest.opportunity.address.state %> </span>
						</div>
						<div class="col-lg-4 card-cause">
							<%= interest.opportunity.cause.name %>
						</div>
						<div class="col-lg-3">						
							<%= link_to "Ver mais", interest, :class=>"link-style btn btn-primary pull-right" %>
						</div>
						<div class="col-lg-1">
						<a href="interests/<%=interest.id%>" class="link-style" title="Desmarcar interesse", data-method="delete" >
							<button type="button" class="btn btn-default" aria-label="Left Align">
							  <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
							</button>
						</a>
						</div>
					</div>
				</div>
			</div>
		<% end %>
	</div>
</div>