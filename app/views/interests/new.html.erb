<div class ="form-horizontal">
	<%= form_for(@interest) do |f| %>
		<% if @interest.errors.any? %>
		    <div id="error_explanation">
		      <h2>
		        <%= pluralize(@interest.errors.count, "error") %> prohibited
		        this interest from being saved:
		      </h2>
		      <ul>
		        <% @interest.errors.full_messages.each do |msg| %>
		          <li><%= msg %></li>
		        <% end %>
		      </ul>
		    </div>
  		<% end %>
		<%=  f.hidden_field :opportunity_id, :value => params[:opportunity]%>
		<%= f.fields_for :volunteer do |form| %>
			<div class="form-group">
				<%= form.label "Nome:", :class => "col-lg-2 control-label" %>
				<div class="col-lg-8">
					<%= form.text_field :name, :class => "form-control" %>
					
				</div>
			</div>

			<div class="form-group">
				<%= form.label "Email:", :class => "col-lg-2 control-label" %>
				<div class="col-lg-8">
					<%= form.text_field :email, :class => "form-control" %>
				</div>
			</div>

			<div class="form-group">
				<%= form.label "Telefone:", :class => "col-lg-2 control-label" %>
				<div class="col-lg-8">
					<%= form.text_field :phone, :class => "form-control" %>
				</div>
			</div>

			<div class="form-group">
				<%= form.label "Observações:", :class => "col-lg-2 control-label" %>
				<div class="col-lg-8">
					<%= form.text_area :observations, :class => "form-control", :rows => "3" %>
				</div>
			</div>

			<div class="form-group">
				<div class="col-lg-offset-2 col-lg-8">
					<%= f.submit "Enviar", :class => "btn btn-default btn-lg btn-block" %>
				</div>
			</div>
		<% end %>
	<% end %>
</div>