<div class="row">
		<div class="col-lg-offset-2 col-lg-5 form-group">
			<%= f.label "Nome da ong:", :for => "name-ngo", :class => "control-label" %>
			<%= f.text_field :name, :id => "name-ngo", :class => "form-control validate-name" %>
		</div>
			<div class="col-lg-offset-2 col-lg-5">
				<div id="nameError" class="col-lg-5 alert alert-danger custom-alert-danger empty-error-name-ngo">
					<p>Campo Obrigatório!</p>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-offset-2 col-lg-8 form-group">
				<%= f.label "Descrição:", :for => "description-ngo", :class => "control-label" %>
				<%= f.text_area :description, :class => "form-control validate-description" , :id => "description-ngo"%>
			</div>
	      	<div class="col-lg-offset-2 col-lg-5">
				<div id="description-error" class="col-lg-5 alert alert-danger custom-alert-danger empty-error-description-ngo">
	        		<p>Campo Obrigatório!</p>
	    		</div>
	    	</div>
		</div>
    <div name="phones">
      <div class="row">
        <div class="col-lg-offset-2 col-lg-4 form-group">
        <%= f.label "Telefone(s):", :for => "phone-ngo", :class => "control-label" %> 
          <a href="#"><span class="glyphicon glyphicon-plus add_field_button" aria-hidden="true"></span></a>
          <a href="#" class="remove_field"><span class="glyphicon glyphicon-minus" aria-hidden="true">
          </span></a>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-offset-2 col-lg-10 input_fields_wrap">
          <input type="hidden" value="<%=@phones %>" id="phones-ngo"/>
        </div>
      </div>
    </div>

    <div id="address">
		  <%= render './addresses/address_form', f:f %>
    </div>
  	<div class="row">
  		<div class="col-lg-offset-2 col-lg-10 form-group">
  			<%= f.check_box :privacy, :id =>"privacy-ngo" %>
  			<%= f.label "Ocultar dados da ong",:for => "privacy-ngo" %>
  	  </div>
	 </div>