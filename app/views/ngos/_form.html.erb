<div class="row">
	<div class="col-lg-offset-1">
		<div id="nameError" class="col-lg-10 alert alert-danger custom-alert-danger empty-error-name-ngo">
			<p>Nome Obrigatório!</p>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-lg-offset-1">
		<div id="description-error" class="col-lg-10 alert alert-danger custom-alert-danger empty-error-description-ngo">
			<p>Descrição Obrigatória!</p>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-lg-offset-1">
		<div id="description-error" class="col-lg-10 alert alert-danger custom-alert-danger phone-error-invalid">
	    	<p>Telefone Obrigatório!</p>
			</div>
	</div>
</div>
<div class="row">
	<div class="col-lg-offset-1">
		<div class="col-lg-10 alert alert-danger custom-alert-danger empty-error-inputZipcode">
			<p>CEP Obrigatório!</p>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-lg-offset-1">
		<div class="col-lg-10 alert alert-danger custom-alert-danger error-zipcode-invalid">
			<p>CEP inválido!</p>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-lg-offset-1">
	<div id="emailErrorInvalid" class="col-lg-10 alert alert-danger custom-alert-danger email-error-invalid">
			<p>Email Inválido!</p>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-lg-offset-1">
  	<div id="emailErrorNil" class="col-lg-10 alert alert-danger custom-alert-danger empty-error-email-user">
  	  	<p>Email Obrigatório!</p>
  	</div>
	</div>
</div>
<div class="row">
	<div class="col-lg-offset-1">
			<div id="passwordError" class="col-lg-10 alert alert-danger custom-alert-danger empty-error-password-user">
				<p>Senha Obrigatória!</p>
			</div>
	</div>
</div>
<div class="row">
	<div class="col-lg-offset-2 col-lg-5 form-group">
		<label class="control-label", for="name-ngo">Nome da ONG: <span class="mandatory">*</span></label>
		<%= f.text_field :name, :id => "name-ngo", :class => "form-control validate-name" %>
	</div>
</div>
<div class="row">
	<div class="col-lg-offset-2 col-lg-8 form-group">
	<label class="control-label", for="description-ngo">Descrição: <span class="mandatory">*</span></label>
		<%= f.text_area :description, :class => "form-control validate-description" , :id => "description-ngo"%>
	</div>
</div>
<div class="row">
	<div class="col-lg-offset-2 col-lg-8 form-group">
	<label class="control-label", for="description-ngo">Missão: </label>
		<%= f.text_area :mission, :class => "form-control validate-mission" , :id => "mission-ngo"%>
	</div>
</div>
<div class="row">
  <div class="col-lg-offset-2 col-lg-4 form-group">
    <%= f.label "Telefone(s):", :class => "control-label", :for =>"phone1-ngo" %>
  	<b><span class="mandatory", for="phone1-ngo">*</span></b>
  </div>
</div>
<div class="row">
  <div class="col-lg-offset-2 col-lg-10">
    <div class="col-lg-2 form-group">
      <%= f.telephone_field :phone1, :class => "form-control phone_with_ddd validate-phone", :placeholder => "(99)9999-9999", :id =>"phone1-ngo" %>
    </div>
    <div class="col-lg-2 form-group">
      <%= f.telephone_field :phone2, :class => "form-control phone_with_ddd", :placeholder => "(99)9999-9999", :id =>"phone2-ngo" %>
    </div>
  </div>
</div>
<div class="row">
	<div class="col-lg-offset-2 col-lg-5 form-group">
		<label class="control-label", for="name-ngo">Email para contato: <span class="mandatory">*</span></label>
		<%= f.text_field :contact_email, :id => "email-ngo", :class => "form-control validate-contact-email" %>
	</div>
</div>

<div id="address">
  <%= render './addresses/address_form', f:f %>
</div>
<div class="row">
	<div class="col-lg-offset-2 col-lg-10 form-group">
		<%= f.check_box :privacy, :id =>"privacy-ngo" %>
		<%= f.label "Ocultar dados da ong",:for => "privacy-ngo" %>
  </div>
</div>
