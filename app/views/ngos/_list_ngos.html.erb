<% @ngos_result.each do |ngo| %>
	<div class="panel">
		<div class="row panel-body detailopp">
			<div class="row">
				<div class="col-lg-12 ngo-title">
					<h3><%=ngo.name%></h3>
				</div>
			</div>
			
			<div class="row">
				<div class="col-lg-12 description">
					<%= ngo.description %>
				</div>
			</div>

			<div class="row">
				<div class="col-lg-12">
					<%= ngo.email %>
				</div>
			</div>

			<div class="row">
				<div class="col-lg-4">
					<%= ngo.address.city %>, 
					<%= ngo.address.state %>
				</div>
			</div>
		</div>
	</div>
<%end%>