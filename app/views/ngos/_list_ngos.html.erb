<% if @ngos_result.empty? %>
	<div class="panel panel-default">
		<div class="row panel-body">
			<h3><%= "Sua pesquisa nÃ£o encontrou resultados" %></h3>
		</div>
	</div>
<% end %>
<% @ngos_result.each do |ngo| %>
	<div class="panel">
		<div class="row panel-body bs-callout bs-callout-info">
			<div class="row">
				<div class="col-lg-2">
					<%= cl_image_tag("xwqiraah48rkjd1mpv21.png", :width=>100, :height=>100, :class=>"img-list") if !ngo.user.photo? %>
					<%= image_tag (ngo.user.photo_url(:list)), :class => "img-list" if ngo.user.photo? %>
				</div>
				<div class="col-lg-10 margin-left-list">
					<a href="ngos/<%=ngo.id%>"><h3 class="ngo-title"><%=ngo.name%></h3></a>
					<div class="row">
						<div class="col-lg-12 description">
							<%= ngo.description %>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-12">
							<%= ngo.contact_email %>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-4">
							<%= ngo.address.city %>,
							<%= ngo.address.state %>
						</div>
						<div class="col-lg-8">
						<%= link_to "Ver mais", ngo, :class=>"link-style btn btn-primary pull-right" %>
						</div>
				</div>
			</div>
		</div>

	</div>
<%end%>
