<%= render './layouts/search_bar_ngos.html' %>
<div class="container">
	<div class="row">
		<div class="col-lg-3" id="filtros">
			<h3>Filtros</h3>
			<hr>
		</div>
		<div class="col-lg-9">
			<div id="paginatorTop" class="pull-right paginator">
				<%= paginate @ngos_result, :theme => 'twitter-bootstrap-3' %>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-3">
			<%= render 'layouts/filterbar' %>
		</div>
		<div class="col-lg-9 result-search">
			<div id="texto" class="col-lg-6 br">
				<% if params[:text_search] == nil || params[:text_search] == ""%>
					<span>Exibindo todas Organizações</span>
				<%else%>
					<span>Você pesquisou por <strong><%=params[:text_search] %></strong></span>
				<%end%>
			</div>
			<div class="col-lg-12" id="listNgos">
					<%= render 'list_ngos' %>
			</div>
		</div>
	</div>
	<div class="row">
		<div id="paginatorBottom" class="pull-right paginator">
			<%= paginate @ngos_result, :theme => 'twitter-bootstrap-3' %>
		</div>
	</div>
</div>
