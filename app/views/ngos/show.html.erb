<div class="container">
	<% if notice != nil %>
		<div class= "alert alert-success">
			<p id="notice"><%= notice %></p>
		</div>
	<%end%>
	<% if error != nil %>
		<div class= "alert alert-danger col-lg-offset-4 col-lg-4 centralize">
			<p id="error"><%= error %></p>
		</div>
	<%end%>
	<div class="panel ">		
			<div class="col-lg-12">
				<div class="row">
					<div class="col-lg-10">
						<h1>
							<%= @ngo.name %>
							<% if current_user != nil && current_user.role == "ngo" %>
								<% if require_user_owner_ngo(@ngo) %>
									<a href= "<%=@ngo.id%>/edit" class="link-style" title="Editar">
										<button type="button" class="btn btn-default btn-primary" aria-label="Left Align">
											<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
										</button>
									</a>
									<button type="button" class="btn btn-default btn-danger" aria-label="Left Align" data-toggle="modal" data-target="#removeModal">
										<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
									</button>
								<%end%>
							<%end%>
						</h1>
					</div>
				</div>
			</div>
		<div class="panel-body detailopp">
			<div class="formsession">
				<div class="row">
					<strong>Descrição: </strong>
				</div>
				<div class="row">
					<span class="leftspace"><%= @ngo.description %></span>
				</div>
			</div>

			<div class="formsession">
				<div class="row">
					<strong>Local: </strong>
					<!-- Criar o if privacy == true mostrar a mensagem que a ONG deixou os dados privados. -->
					<%= @ngo.address.print_address %>
				</div>
			</div>

			<div class="formsession">
				<div class="row">
					<strong>Telefone: </strong>
					<% @ngo.phones.each do |phone| %>
						<%= phone.phone_number %>
					<% end %>
				</div>
			</div>

			<div class="formsession">
				<div class="row">
					<strong>Email: </strong>
					<%= @ngo.user.email %>
				</div>
			</div>

			<div class="formsession">
				<div class="row">
					<strong>Causa:</strong>
					<% @ngo.causes.each do |cause| %>
						<%= cause.name %>
					<% end %>
				</div>
			</div>
		</div>


		<div class="ngo-opportunities">
			<div>
				<h3 class="">Lista De Oportunidades:</h3>
			</div>
			<% @ngo.opportunities.each do |opportunity| %>
				<div class="panel">
					<div class="row panel-body detailopp bs-callout bs-callout-info">
						<div class="row">
							<div class="col-lg-12 opportunity-title">
								<h3><%= opportunity.title %></h3>
							</div>
						</div>
						<div class="row">
							<div class="col-lg-12 oppt-ngo">
								<span>Por <%= opportunity.ngo.name %></span>
							</div>
						</div>
						<div class="row">
							<div class="col-lg-12 description">
								<%= opportunity.description %>
							</div>
						</div>
						<div class="row">
							<div class="col-lg-4">
								<span><%= opportunity.address.city %>,
									<%= opportunity.address.state %> </span>
							</div>
							<div class="col-lg-4 card-cause">
								<%= opportunity.cause.name %>
							</div>
							<div class="col-lg-4">
						 		<%= link_to "Ver mais", opportunity, :class=>"link-style btn btn-primary pull-right" %>
							</div>
						</div>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>

<%if current_user%>
	<%if current_user.ngo%>
		<div class="modal fade" id="removeModal" tabindex="-1" role="dialog" aria-labelledby="removeModalLabel">
		  <div class="modal-dialog" role="document">
		    <div class="modal-content">
		      <div class="modal-header">
		        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		        <h4 class="modal-title" id="removeModalLabel">Você deseja deletar <%=@ngo.name%>?</h4>
		      </div>
					<div>
						<%= form_tag(@ngo, method: :delete) do %>
						<div class="modal-body">
							Informe sua senha para concluir o processo de remoção do perfil
							<%= password_field_tag :password %>
						</div>
			      <div class="modal-footer">
						<%= submit_tag "Delete" %>
						<% end %>
			      </div>
					</div>
		    </div>
		  </div>
		</div>
	<%end%>
<%end%>
