<div class="container">
	<div class="panel ">
		<% if notice != nil %>
			<div class= "alert alert-success">
				<p id="notice"><%= notice %></p>
			</div>
		<%end%>
			<div class="col-lg-12">
				<div class="row">
					<div class="col-lg-10">
						<h1>
							<%= @ngo.name %>
							<% if current_user != nil && current_user.role == "ngo" %>
								<% if require_user_owner_ngo(@ngo) %>
									<a href= "<%=@ngo.id%>/edit" class="link-style" title="Editar">
										<button type="button" class="btn btn-default" aria-label="Left Align">
											<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
										</button>
									</a>
									<a href= "<%=@ngo.id%>" class="link-style" title="Deletar" data-method="delete">
										<button type="button" class="btn btn-default" aria-label="Left Align">
								 			<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
										</button>
									</a>
								<%end%>
							<%end%>
						</h1>
					</div>	
				</div>	
			</div>
		<div class="panel-body detailopp">
			<div class="formsession">
				<div class="row">
					<strong>Descrição: </strong> 
				</div>
				<div class="row">
					<span class="leftspace"><%= @ngo.description %></span> 
				</div>
			</div>

			<div class="formsession">
				<div class="row">
					<strong>Local: </strong>
					<!-- Criar o if privacy == true mostrar a mensagem que a ONG deixou os dados privados. -->
					<%= @ngo.address.print_address %>
				</div>
			</div>

			<div class="formsession">
				<div class="row">
					<strong>Telefone: </strong>
					<% @ngo.phones.each do |phone| %>
						<%= phone.phone_number %>
					<% end %>
				</div>	
			</div>

			<div class="formsession">
				<div class="row">
					<strong>Email: </strong>
					<%= @ngo.user.email %>
				</div>
			</div>

			<div class="formsession">
				<div class="row">
					<strong>Causa:</strong>
					<% @ngo.causes.each do |cause| %>	
						<%= cause.name %>
					<% end %>
				</div>
			</div>
		</div>
		

		<div class="ngo-opportunities">
			<div>
				<h3 class="">Lista De Oportunidades:</h3>
			</div>
			<% @ngo.opportunities.each do |opportunity| %>	
				<div class="panel">
					<div class="row panel-body detailopp bs-callout bs-callout-info">
						<div class="row">
							<div class="col-lg-12 opportunity-title">
								<h3><%= opportunity.title %></h3>
							</div>
						</div>
						<div class="row">
							<div class="col-lg-12 oppt-ngo">
								<span>Por <%= opportunity.ngo.name %></span>
							</div>
						</div>
						<div class="row">
							<div class="col-lg-12 description">
								<%= opportunity.description %>
							</div>
						</div>
						<div class="row">
							<div class="col-lg-4">
								<span><%= opportunity.address.city %>, 
									<%= opportunity.address.state %> </span>
							</div>
							<div class="col-lg-4 card-cause">
								<%= opportunity.cause.name %>
							</div>
							<div class="col-lg-4">
						 		<%= link_to "Ver mais", opportunity, :class=>"link-style btn btn-primary pull-right" %>
							</div>
						</div>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>
