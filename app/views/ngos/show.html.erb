<div class="container">
	<% if notice != nil %>
		<div class= "alert alert-success">
			<p id="notice"><%= notice %></p>
		</div>
		<br>
	<%end%>
	<% if error != nil %>
		<div class= "alert alert-danger col-lg-offset-4 col-lg-4 centralize">
			<p id="error"><%= error %></p>
		</div>
		<br>
	<%end%>
	<div class="panel ">
			<div class="col-lg-12">
				<div class="row">
					<div class="col-lg-10">
						<h1>
							<% if @ngo.name.length > 49 %>
							 	<%= @ngo.name.first(50)+'...' %>
							<% else %>
								<%= @ngo.name.first(50)%>
							<%end%>
							<% if current_user != nil && current_user.role == "ngo" %>
								<% if require_user_owner_ngo(@ngo) %>
									<a href= "<%=@ngo.id%>/edit" class="link-style" title="Editar minhas informações">
										<button type="button" class="btn btn-default btn-primary" aria-label="Left Align">
											<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
										</button>
									</a>
								<%end%>
							<%end%>
						</h1>
					</div>
				</div>
			</div>
		<div class="panel-body detailopp">
			<div class="formsession">
				<div class="row">
					<strong>Descrição: </strong>
				</div>
				<div class="row">
					<span class="leftspace"><%= @ngo.description %></span>
				</div>
			</div>
			<div class="formsession">
				<div class="row">
					<strong>Missão: </strong>
				</div>
				<div class="row">
					<span class="leftspace"><%= @ngo.mission %></span>
				</div>
			</div>
			<div class="formsession">
				<div class="row">
					<strong>Local: </strong>
					<%= @ngo.address.print_address %>
				</div>
			</div>

			<div class="formsession">
				<div class="row">
					<b>Telefone(s): </b>
					<%= @ngo.phone1 %>
					<%= ", #{@ngo.phone2}" unless @ngo.phone2.blank?%></p>

				</div>
			</div>

			<div class="formsession">
				<div class="row">
					<strong>Email: </strong>
					<%= @ngo.user.email %>
				</div>
			</div>

			<div class="formsession">
				<div class="row">
					<strong>Causa:</strong>
					<% @ngo.causes.each do |cause| %>
						<%= cause.name %>
					<% end %>
				</div>
			</div>
		</div>


		<div class="ngo-opportunities">
			<div>
				<h3 class="">Lista De Oportunidades:</h3>
			</div>
			<% @ngo.opportunities.each do |opportunity| %>
				<div class="panel">
					<div class="row panel-body detailopp bs-callout bs-callout-info">
						<div class="row">
							<div class="col-lg-12 opportunity-title">
								<h3><%= opportunity.title %></h3>
							</div>
						</div>
						<div class="row">
							<div class="col-lg-12 oppt-ngo">
								<span>Por <%= opportunity.ngo.name %></span>
							</div>
						</div>
						<div class="row">
							<div class="col-lg-12 description">
								<%= opportunity.description %>
							</div>
						</div>
						<div class="row">
							<div class="col-lg-4">
								<span><%= opportunity.address.city %>,
									<%= opportunity.address.state %> </span>
							</div>
							<div class="col-lg-4">
						 		<%= link_to "Ver mais", opportunity, :class=>"link-style btn btn-primary pull-right" %>
							</div>
						</div>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>
