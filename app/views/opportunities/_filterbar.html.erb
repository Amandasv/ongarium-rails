<div class="row ">
	<div class="col-lg-12">
		<h3>Filtros</h3>
		<hr>
		<div class="causes">
			<h4> Causa: </h4>
			<% @causes.each do |cause| %>
				<input type="checkbox" name="causes" id="<%=cause.id%>" value="<%=cause.id%>" class="cb_cause">
				<label for="<%=cause.id%>"><%=cause.name%></label>
				<br>
				<%end%>
		</div>
		<hr>
		<div class="cities">
			<h4> Cidade: </h4>
			<% @cities.each do |city| %>
				<input type="checkbox" name="cities" id="<%=city%>" value="<%=city%>" class="cb_city">
				<label for="<%=city%>"><%=city%></label>
				<br>
				<%end%>
		</div>
	</div>
</div>