<% if @opportunities_result.empty? %>
	<div class="panel panel-default">
		<div class="row panel-body">
			<h3><%= "Sua pesquisa nÃ£o encontrou resultados" %></h3>
		</div>
	</div>
<% end %>
<% @opportunities_result.each do |opportunity| %>
		<div class="panel panel-list-opportunities">
			<div class="row panel-body bs-callout bs-callout-info">
				<div class="row">
					<div class="col-lg-12">
						<a href="opportunities/<%=opportunity.id%>"><h3 class="opportunity-title"><%= opportunity.title %></h3></a>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-12">
						<span class="oppt-ngo">Por <a href="ngos/<%=opportunity.ngo.id%>"><%= opportunity.ngo.name %></span></a>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-12">
						<div class="description"><%= opportunity.description %></div>
					</div>
				</div>
				<%if opportunity.address != nil%>
					<div class="row">
						<div class="col-lg-4">
							<span><%= opportunity.address.city %>, <%= opportunity.address.state %></span>
						</div>
				<%else%>
					<div>
						<span>A combinar</span>
					</div>
				<%end%>
					<div class="col-lg-8">
						 		<%= link_to "Ver mais", opportunity, :class=>"btn btn-primary pull-right" %>
					</div>
				</div>
			</div>
		</div>
<% end %>
