<div class ="container">
	<div class="col-lg-12 text-center">
		<h1>Editar Oportunidade</h1>
	</div>
	<div class= "alert alert-danger col-lg-offset-4 col-lg-4 centralize errorMessageJS">
		<p id="errorMessage">Erro encontrado, verifique os campos em vermelho.</p>
	</div>
	<%= form_for(@opportunity, :html=>{:id=>"form-opportunity"}) do |f| %>
	<%= render 'form', f:f%>
	<div class="row">
		<div class="form-group">
			<div class="col-lg-offset-4 col-lg-4 margin-end-top margin-end-bot">
				<%= f.submit "Salvar alterações", :class => "btn btn-default btn-lg btn-block btn-primary", id: "confirm-opportunity" %>
			</div>
		</div>
	</div>
	<% end %>
</div>
