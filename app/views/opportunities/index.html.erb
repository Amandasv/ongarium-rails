<section id="section-search">
	<div class="container col-lg-8 col-lg-offset-2">
		<%= render './layouts/search_bar_opportunity.html' %>
	</div>
</section>
<section id="search-result">
	<div class="container">
		<div class="row">
			<div class="col-lg-3" id="filtros">
				<h3>Filtros</h3>
				<hr>
				<%= render 'layouts/filterbar' %>
			</div>
			<div class="col-lg-6" id="resultado_busca">
				<div id="texto" class="">
					<% if params[:text_search] == nil || params[:text_search] == ""%>
						<h3>Exibindo todas oportunidades</h3>
					<%else%>
						<h3>VocÃª pesquisou por <strong><%=params[:text_search] %></strong></h3>
					<%end%>
					<hr>
				</div>
			</div>
			<div class="col-lg-3">
				<div id="paginatorTop" class="pull-right paginator">
					<%= paginate @opportunities_result, :theme => 'twitter-bootstrap-3' %>
				</div>
			</div>
			<div class="col-lg-9" id="listOpportunities">
						<%= render 'list_opportunities' %>
			</div>
		</div>
		<div class="row">
			<div id="paginatorBottom" class="pull-right paginator">
				<%= paginate @opportunities_result, :theme => 'twitter-bootstrap-3' %>
			</div>
		</div>
	</div>
</section>
