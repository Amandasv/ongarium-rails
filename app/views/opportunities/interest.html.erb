<div class ="form-horizontal">
	<%= form_for @volunteer do |form| %>

	<div class="form-group">
		<%= form.label "Nome:", :class => "col-lg-2 control-label" %>
		<div class="col-lg-8">
			<%= form.text_field :name, :class => "form-control" %>
		</div>
	</div>

	<div class="form-group">
		<%= form.label "Email:", :class => "col-lg-2 control-label" %>
		<div class="col-lg-8">
			<%= form.text_field :email, :class => "form-control" %>
		</div>
	</div>

	<div class="form-group">
		<%= form.label "Telefone:", :class => "col-lg-2 control-label" %>
		<div class="col-lg-8">
			<%= form.text_field :phone, :class => "form-control" %>
		</div>
	</div>

	<div class="form-group">
		<%= form.label "Observações:", :class => "col-lg-2 control-label" %>
		<div class="col-lg-8">
			<%= form.text_area :observations, :class => "form-control", :rows => "3" %>
		</div>
	</div>

	<div class="form-group">
		<div class="col-lg-offset-2 col-lg-8">
			<%= form.submit "Candidatar-se", :class => "btn btn-default btn-lg btn-block" %>
		</div>
	</div>
	<% end %>

</div>