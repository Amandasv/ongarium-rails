<div class="container">
	<div class="ngo-interests">
    <div class="row">
  		<div class="col-lg-5 title">
  				<h3>Minhas Oportunidades:</h3>
  		</div>
      <div class="col-lg-4 button center-block">
          <%= link_to "Cadastrar Oportunidades", new_opportunity_url, :class=>"link-style btn btn-primary" %>
      </div>
			<div class="col-lg-3 pull-right">
          <%= paginate @ngos_opportunities, :theme => 'twitter-bootstrap-3'%>
      </div>
    </div>


    </div>
		<% @ngos_opportunities.each do |opportunity| %>
			<div class="panel">
				<div class="row panel-body detailopp bs-callout bs-callout-info">
					<div class="row">
						<div class="col-lg-10 interest-title">
							<h3><%= opportunity.title %></h3>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-12 oppt-ngo">
							<span>Por <%= opportunity.ngo.name %></span>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-12 description">
							<%= opportunity.description %>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-4">
							<span><%= opportunity.address.city %>,
								<%= opportunity.address.state unless interest.opportunity.blank? %> </span>
						</div>
						<div class="col-lg-4">
							<%= link_to "Ver mais", opportunity, :class=>"link-style btn btn-primary pull-right" %>
						</div>
					</div>
				</div>
			</div>
		<% end %>
    <div class="row">
      <div class="col-lg-12 pull-right">
        <div id="paginatorBottom" class="pull-right paginator">
          <%= paginate @ngos_opportunities, :theme => 'twitter-bootstrap-3' %>
        </div>
      </div>
    </div>
	</div>
</div>
