<div class="container">
	<div class="ngo-opportunities">
		<div>
			<h3 class="">Minhas Oportunidades:</h3>
		</div>
		<% @ngo.opportunities.each do |opportunity| %>	
			<div class="panel">
				<div class="row panel-body detailopp bs-callout bs-callout-info">
					<div class="row">
						<div class="col-lg-10 opportunity-title">
							<h3><%= opportunity.title %></h3>
						</div>						
					</div>
					<div class="row">
						<div class="col-lg-12 oppt-ngo">
							<span>Por <%= opportunity.ngo.name %></span>
						</div>
					</div>
					<div class="row"> 
						<div class="col-lg-12 description">
							<%= opportunity.description %>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-4">
							<span><%= opportunity.address.city %>, 
								<%= opportunity.address.state %> </span>
						</div>
						<div class="col-lg-4 card-cause">
							<%= opportunity.cause.name %>
						</div>
						<div class="col-lg-3">						
							<%= link_to "Ver mais", opportunity, :class=>"link-style btn btn-primary pull-right" %>
						</div>
						<div class="col-lg-1">
						<a href="opportunities/<%=opportunity.id%>/edit" class="link-style" title="Editar">
							<button type="button" class="btn btn-default" aria-label="Left Align">
							  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
							</button>
						</a>
						</div>
					</div>
				</div>
			</div>
		<% end %>
	</div>
</div>