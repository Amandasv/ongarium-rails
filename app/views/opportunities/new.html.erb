<div class ="container">
	<div class="col-lg-12 text-center">
		<h1>Nova Oportunidade</h1>
	</div>
	<%= form_for(@opportunity, :html=>{:id=>"form-opportunity"}) do |f| %>
	<%= render 'form', f:f%>
	<div class="row">
		<div class="form-group">
			<div class="col-lg-offset-4 col-lg-4 margin-end-top margin-end-bot">
				<%= f.submit "Criar oportunidade", :class => "btn btn-default btn-lg btn-block btn-primary", id: "confirm-opportunity" %>
			</div>
		</div>
	</div>
	<% end %>
</div>