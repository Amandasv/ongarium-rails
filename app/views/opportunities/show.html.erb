<%= render "interest_modal" %>
<%= render "delete_interest_modal" %>
<%= render "delete_opportunity_modal" %>

<div class="container">
	<div class="panel ">
		<% if notice != nil %>
			<div class= "alert alert-success">
				<p id="notice"><%= notice %></p>
			</div>
		<%end%>
		<div >
			<h1>
				<%= @opportunity.title %>
				<% if ngo_owner_of_opportunity(@opportunity) %>
				<a href= "<%=@opportunity.id%>/edit" class="link-style" title="Editar">
					<button type="button" class="btn btn-default btn-primary" aria-label="Left Align">
						<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
					</button>
				</a>
					<button type="button" class="btn btn-default btn-danger" aria-label="Left Align" data-toggle="modal" data-target="#confirm-delete-modal">
					  <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
					</button>
				<% end %>
			</h1>
		</div>

	<div class="panel-body detailopp">
			<div>
				<p> <span class="bold">Descrição: </span>
				<br>
				<span class="leftspace"><%= @opportunity.description %></span>
				</p>
			</div>
			<div>
				<p> <span class="bold">Local: </span>  <br>
				<span class="leftspace"><%= @opportunity.address.print_address %>
				</p>
			</div>
			<% if @opportunity.recurrent %>
				<div>
					<p> <span class="bold">Ocorre com frequência</span> </p>
				</div>
			<% else %>
			<div>
				<p> <span class="bold">Data de Início: </span> <%= @opportunity.start_date %> </p>
			</div>
			<div>
				<p> <span class="bold">Data de Término: </span> <%= @opportunity.finish_date %></p>
			</div>
			<% end %>
			<div>
					<p> <span class="bold">Ong: </span><%=link_to @opportunity.ngo.name, @opportunity.ngo %></p>
			</div>
			<div>
				<p> <span class="bold">Categorias:</span>
				<span class="leftspace">
				<ul>
					<% @opportunity.causes.each do |cause|%>
						<li> <%= cause.name %> </li>
					<% end %>
				</ul>
				 </span>
				</p>
			</div>
			<div>
				<p> <span class="bold">Vagas: </span><%= @opportunity.vacancies %></p>
			</div>
			<div>
				<p> <span class="bold">Requisitos:</span>
				<span class="leftspace">
				<ul>
					<% @opportunity.skills.each do |skill|%>
						<li> <%= skill.name %> </li>
					<% end %>
				</ul>
				 </span>
				</p>
			</div>
			<%if volunteer_is_interested(@opportunity)%>
				<div class="col-lg-1">
					<button class="btn btn-danger outline" data-toggle="modal" data-target="#confirm-delete-interest-modal">
					  Desmarcar Interesse
					</button>
				</div>
			<%else%>
				<div class="alignright">
					<%if current_user%>
						<%if current_user.role != "ngo"%>
					 		<button class="btn btn-primary outline" data-toggle="modal" data-target="#interestModal">Candidatar-se</button>
				 		<%end%>
			 		<%else%>
			 			<%=link_to "Candidatar-se", login_path, :class=>"btn btn-primary outline"%>
				 	<%end%>
				</div>
			<%end%>
		</div>
	</div>
</div>
