<div class="container">
	<div class="panel ">
		<% if notice != nil %>
			<div class= "alert alert-success">
				<p id="notice"><%= notice %></p>
			</div>
		<%end%>
		<div >
			<h1>
				<%= @opportunity.title %>
				<% if ngo_owner_of_opportunity(@opportunity) %>
				<a href= "<%=@opportunity.id%>/edit" class="link-style" title="Editar">
					<button type="button" class="btn btn-default" aria-label="Left Align">
						<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
					</button>
				</a>
				<a href= "<%=@opportunity.id%>" class="link-style" title="Deletar" data-method="delete">
					<button type="button" class="btn btn-default" aria-label="Left Align">
					  <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
					</button>
				</a>
				<% end %>
			</h1>
		</div>
		<div class="panel-body detailopp">
			<div>
				<p> <span class="bold">Descrição: </span> 
				<br>
				<span class="leftspace"><%= @opportunity.description %></span> 
				</p>
			</div>
			<div>
				<p> <span class="bold">Local: </span>  <br>
				<span class="leftspace"><%= @opportunity.address.print_address %> 
				</p>
			</div>
			<% if @opportunity.recurrent %>
				<div>
					<p> <span class="bold">Ocorre com frequência</span> </p>
				</div>
			<% else %>	
			<div>
				<p> <span class="bold">Data de Início: </span> <%= @opportunity.start_date %> </p>
			</div>
			<div>
				<p> <span class="bold">Data de Término: </span> <%= @opportunity.finish_date %></p>
			</div>
			<% end %>
			<div>
				<p> <span class="bold">Ong: </span><%= @opportunity.ngo.name %></p>
			</div>
			<div>
				<p> <span class="bold">Causa: </span><%= @opportunity.cause.name %></p>
			</div>
			<div>
				<p> <span class="bold">Vagas: </span><%= @opportunity.vacancies %></p>
			</div>
			<div>
				<p> <span class="bold">Requisitos:</span> 
				<span class="leftspace">
				<ul>
					<% @opportunity.skills.each do |skill|%>
						<li> <%= skill.name %> </li>
					<% end %>
				</ul>
				 </span>
				</p>
			</div>
			<%if volunteer_is_interested(@opportunity)%>
				<div class="col-lg-1">
					<a href="/interests/<%=@opportunity.id%>" class="link-style" title="Cancelar Candidatura", data-method="delete" >
						<button type="button" class="btn btn-danger" aria-label="Left Align">
						  Desmarcar Interesse
						</button>
					</a>
				</div>
			<%else%>
				<div class="alignright">
					<%if current_user%>
						<%if current_user.role != "ngo"%>
					 		<button class="btn btn-primary outline" data-toggle="modal" data-target="#myModal">Candidatar-se</button>
				 		<%end%>
			 		<%else%>
			 			<%=link_to "Candidatar-se", login_path, :class=>"btn btn-primary outline"%>
				 	<%end%>
				</div>
			<%end%>
		</div>
	</div>
</div>

<%if current_user%>
	<%if current_user.volunteer%>
		<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
		  <div class="modal-dialog" role="document">
		    <div class="modal-content">
		      <div class="modal-header">
		        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		        <h4 class="modal-title" id="myModalLabel">Confirmar Interesse</h4>
		      </div>
		      <div class="modal-body">
		        <span> Olá <%= current_user.volunteer.name if current_user.volunteer %>, você confirma seu interesse na oportunidade <%= @opportunity.title %> ? </span>
		        <span>Seus dados serão enviados para a ong <%= @opportunity.ngo.name %>, informando seu interesse! Aguarde retorno via e-mail ou telefone. </span>
		      </div>
		      <div class="modal-footer">
		        <%= form_for(@interest,:html => {:id => "form-interest"}) do |f| %>
					<button type="button" class="btn btn-default" data-dismiss="modal">Voltar</button>
					<%=  f.hidden_field :opportunity_id, :value => @opportunity.id %>
					<%= f.submit "Confirmar Interesse", id: "confirm-interest", :class => "btn btn-primary" %>
				<%end%>
		      </div>
		    </div>
		  </div>
		</div>
	<%end%>
<%end%>