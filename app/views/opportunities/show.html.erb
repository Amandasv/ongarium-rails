<div class="container">
	<div class="panel ">
		<% if notice != nil %>
			<div class= "alert alert-success">
				<p id="notice"><%= notice %></p>
			</div>
		<%end%>
		<div >
			<h1>
				<%= @opportunity.title %>
				<% if ngo_owner_of_opportunity(@opportunity) %>
				<a href= "<%=@opportunity.id%>/edit" class="link-style" title="Editar">
					<button type="button" class="btn btn-default" aria-label="Left Align">
						<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
					</button>
				</a>
				<a href= "<%=@opportunity.id%>" class="link-style" title="Deletar" data-method="delete">
					<button type="button" class="btn btn-default" aria-label="Left Align">
					  <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
					</button>
				</a>
				<% end %>
			</h1>
		</div>
		<div class="panel-body detailopp">
			<div>
				<p> <span class="bold">Descrição: </span> 
				<br>
				<span class="leftspace"><%= @opportunity.description %></span> 
				</p>
			</div>
			<div>
				<p> <span class="bold">Local: </span>  <br>
				<span class="leftspace"><%= @opportunity.address.print_address %> 
				</p>
			</div>
			<% if @opportunity.recurrent %>
				<div>
					<p> <span class="bold">Ocorre com frequência</span> </p>
				</div>
			<% else %>	
			<div>
				<p> <span class="bold">Data de Início: </span> <%= @opportunity.start_date %> </p>
			</div>
			<div>
				<p> <span class="bold">Data de Término: </span> <%= @opportunity.finish_date %></p>
			</div>
			<% end %>
			<div>
				<p> <span class="bold">Ong: </span><%= @opportunity.ngo.name %></p>
			</div>
			<div>
				<p> <span class="bold">Causa: </span><%= @opportunity.cause.name %></p>
			</div>
			<div>
				<p> <span class="bold">Vagas: </span><%= @opportunity.vacancies %></p>
			</div>
			<div>
				<p> <span class="bold">Requisitos:</span> 
				<span class="leftspace">
				<ul>
					<% @opportunity.skills.each do |skill|%>
						<li> <%= skill.name %> </li>
					<% end %>
				</ul>
				 </span>
				</p>
			</div>
			<div class="alignright">
			 	<%= link_to "Candidatar-se", new_interest_path(opportunity:@opportunity.id), class:"btn btn-primary outline" if( current_user ?  current_user.role != "ngo" : true)%>
			</div>
			
		</div>
	</div>
</div>