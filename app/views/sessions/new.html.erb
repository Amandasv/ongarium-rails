<div class="form-horizontal">
	<% if notice != nil %>
		<div class= "alert alert-success col-lg-offset-3 col-lg-5">
			<p id="notice"><%= notice %></p>
		</div>
	<%end%>

	<% if error != nil %>
		<div class= "alert alert-danger col-lg-offset-3 col-lg-5">
			<p id="error"><%= error %></p>
		</div>
	<%end%>


	<%= form_for(:session, url: login_path) do |f| %> 
	  <div class="form-group">
			<div class="col-lg-offset-3 col-lg-5">
				<%= f.email_field :email, :placeholder => "E-mail", :class => "form-control" %>
			</div>
	  </div>
	  	<div class="form-group">
			<div class="col-lg-offset-3 col-lg-5">
				<%= f.password_field :password, :placeholder => "Senha", :class => "form-control" %>
			</div>
		</div>
	  	<div class="form-group">
			<div class="col-lg-offset-3 col-lg-5">
				<%= f.submit "Entrar", :class => "btn btn-default btn-lg btn-block" %>
			</div>
		</div>
	    <div class="form-group">
			<div class="col-lg-offset-3 col-lg-5">
				<%= link_to "Esqueceu sua senha?", new_password_reset_path %>
			</div>
		</div>
		 <div class="form-group">
			<div class="col-lg-offset-3 col-lg-5">
				<%= check_box_tag :remember_me, 1, params[:remember_me] %>
  				<%= label_tag "Manter-me logado" %>
			</div>
		</div>
	<% end %>
</div>

 