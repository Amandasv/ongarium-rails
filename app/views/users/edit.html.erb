<% if notice != nil %>
	<div class= "alert alert-success">
		<p id="notice"><%= notice %></p>
	</div>
<%end%>
<% if error != nil %>
	<div class= "alert alert-danger col-lg-offset-4 col-lg-4 centralize">
		<p id="error"><%= error %></p>
	</div>
<%end%>

<div class="row">
    <div class="col-lg-offset-4 col-lg-4 form-group">
      <h1> Alterar Senha / Email </h1>
    </div>
</div>

<%= form_for @user do |f| %> <!-- Model Address-->
  <div class="row">
    <div class="col-lg-offset-4 col-lg-4">
      <%= f.label "Email:", :for => "email-user", :class => "control-label" %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-offset-4 col-lg-4 form-group">
      <%= f.text_field :email, :id => "email-user", :placeholder => 'exemplo@exemplo.com', :class => "form-control validate-email" %>
    </div>
    <div class="col-lg-5">
      <div id="emailErrorInvalid" class="col-lg-5 alert alert-danger custom-alert-danger email-error-invalid">
          <p>Email Inválido!</p>
        </div>
      </div>
      <div class="col-lg-5">
        <div id="emailErrorNil" class="col-lg-5 alert alert-danger custom-alert-danger empty-error-email-user">
            <p>Campo Obrigatório!</p>
        </div>
      </div>
  </div>


  <div class="row">
    <div class="col-lg-offset-4 col-lg-4">
      <%= f.label "Senha:", :for => "password-user", :class => "control-label" %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-offset-4 col-lg-4 form-group">
      <%= f.password_field :password, :id => "password-user", :class => "form-control validate-password" %>
    </div>
  <div class="col-lg-5">
    <div id="passwordError" class="col-lg-5 alert alert-danger custom-alert-danger empty-error-password-user">
      <p>Campo Obrigatório!</p>
    </div>
  </div>

  </div>
  <div class="row">
    <div class="col-lg-offset-4 col-lg-4">
      <%= f.label "Confirmar Senha:", :for => "password-confirmation-user", :class => "control-label" %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-offset-4 col-lg-4 form-group">
      <%= f.password_field :password_confirmation, :id => "password-confirmation-user", :class => "form-control validate-password-confirmation-user" %>
    </div>
    <div class="col-lg-5">
      <div id="passwordConfirmationError" class="col-lg-5 alert alert-danger custom-alert-danger password-confirmation-invalid">
        <p>Senhas não são iguais!</p>
      </div>
    </div>
    <div class="col-lg-5">
        <div id="passwordConfirmationErrorNil" class="col-lg-5 alert alert-danger custom-alert-danger empty-error-password-confirmation-user">
          <p>Campo Obrigatório!</p>
        </div>
    </div>
  </div>


  <div class="row">
    <div class="col-lg-offset-4 col-lg-4">
      <a href="" data-toggle="modal" data-target="#removeModal" class="danger-text">Remover minha conta</a>
    </div>
  </div>

  </br>

  <div class="row">
    <div class="col-lg-offset-4 col-lg-4">
      <%= f.submit "Enviar", :class => "btn btn-lg btn-block btn-primary" %>
    </div>
  </div>
<% end %>

<div class="modal fade" id="removeModal" tabindex="-1" role="dialog" aria-labelledby="removeModalLabel">
   <div class="modal-dialog" role="document">
	  <div class="modal-content">
	    <div class="modal-header">
	      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	      <h4 class="modal-title" id="removeModalLabel">Você deletar sua conta: <%=@accountVariable.name%>?</h4>
	    </div>
			<div>
				<%= form_tag(@accountVariable, method: :delete) do %>
				<div class="modal-body">
					<p>Informe sua senha para concluir o processo de remoção do perfil</p>
					<span> Senha: </span> <%= password_field_tag :password %>
				</div>
	      <div class="modal-footer">
				<%= submit_tag "Remover minha conta", :class => "btn btn-danger" %>
				<% end %>
	      </div>
			</div>
	  </div>
	</div>
</div>
