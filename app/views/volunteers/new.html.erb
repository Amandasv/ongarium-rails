<div class="container">
  <% if flash[:error] != nil %>
    <div class= "alert alert-danger col-lg-offset-4 col-lg-4 centralize">
      <p id="error"><%= error %></p>
    </div>
  <%end%>
  <%= form_for(@volunteer,:html=>{:id=>"form-volunteer"}) do |f| %>
    <% if @volunteer.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@volunteer.errors.count, "error") %> prohibited
            this interest from being saved:
          </h2>
          <ul>
            <% @volunteer.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    <div class="row">
      <label class="col-lg-12 text-center margin-end-bot margin-end-top">
        <h3>Cadastro do Voluntário</h3>
      </label>
    </div>
    <div class="row">
      <div class="col-lg-offset-2 col-lg-5 form-group">
        <label class="control-label", for="name-volunteer">Nome:<span class="mandatory">*</span></label>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-offset-2 col-lg-5 form-group">
        <%= f.text_field :name, :id => "name-volunteer", :class => "form-control validate-name" %>
      </div>
      <div class="col-lg-5">
        <div id="nameError" class="col-lg-5 alert alert-danger custom-alert-danger empty-error-name-volunteer">
          <p>Campo Obrigatório!</p>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-offset-2 col-lg-8 form-group">
        <%= f.label "Observações:", :for => "observations-ngo", :class => "control-label" %>
        <%= f.text_area :observations, :class => "form-control validate-observations" , :id => "description-ngo"%>
      </div>
      <div class="col-lg-offset-1 col-lg-7">
        <div id="observations-error" class="col-lg-3 alert alert-danger custom-alert-danger empty-error-observations-ngo">
              <p>Campo Obrigatório!</p>
          </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-offset-2 col-lg-5 form-group">
        <label class="control-label", for="phone-volunteer">Telefone(s):<span class="mandatory">*</span></label>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-offset-2 col-lg-10 input_fields_wrap">
        <div class="col-lg-2 form-group">
          <%= f.telephone_field :phone, :class => "form-control phone_with_ddd validate-phone", :placeholder => "(99)9999-9999", :id =>"phone-vol" %>
        </div>
        <div class="col-lg-2 form-group">
          <%= f.telephone_field :phone1, :class => "form-control phone_with_ddd", :placeholder => "(99)9999-9999", :id =>"phone1-vol" %>
        </div>
        <div class="col-lg-2 form-group">
          <%= f.telephone_field :phone2, :class => "form-control phone_with_ddd", :placeholder => "(99)9999-9999", :id =>"phone2-vol" %>
        </div>
      </div>
    </div>
    <div class="col-lg-offset-2 col-lg-7">
        <div id="phone-error" class="col-lg-3 alert alert-danger custom-alert-danger phone-error-invalid">
              <p>Telefone Inválido!</p>
          </div>
      </div>
  <%= render 'users/form', f:f %>
    <div class="row">
      <div class="col-lg-offset-2 col-lg-4 form-group">
        <span class="mandatory">*Campos Obrigatórios</span>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-offset-4 col-lg-4 margin-end-top margin-end-bot">
      <%= f.submit "Cadastrar Voluntário", :class => "btn btn-default btn-lg btn-block btn-primary", id: "confirm-volunteer" %>
    </div>
  </div>
  <% end %>
</div>