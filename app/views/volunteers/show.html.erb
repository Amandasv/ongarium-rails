<div class="container">
		<div class="row">
			<% if flash[:notice] != nil %>
			    <div class= "alert alert-success col-lg-offset-4 col-lg-4 centralize">
			      <p id="notice"><%= notice %></p>
			    </div>
		  	<%end%>
		</div>
		<div class="row">
				<div class="col-lg-3">
					<%= cl_image_tag("xwqiraah48rkjd1mpv21.png", :class => "image-user") if !@volunteer.user.photo? %>
					<%= image_tag (@volunteer.user.photo_url), :class => "image-user" if @volunteer.user.photo? %>
				</div>
				<div class="col-lg-9 margin-left-info">
					<div class="row info-user">
						<h1 class="name-user"><%= current_user.volunteer.name %>
							<% if current_user != nil && current_user.role == "volunteer" %>
						        <a href="<%=current_user.volunteer.id%>/edit" class="link-style" title="Editar">
						          <button type="button" class="btn btn-default" aria-label="Left Align">
						            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
						          </button>
						        </a>
			      	<%end%>
						</h1>
					</div>
					<div class="row info-user">
						<b>Telefone(s): </b>
						<%= @volunteer.phone1 %>
						<%= ", #{@volunteer.phone2}" unless @volunteer.phone2.empty?%>
					</div>
					<div class="row info-user">
						<strong>Email: </strong>
						<%= current_user.email %>
					</div>
					<div class="row info-user">
						<strong>Sexo: </strong>
						<span class="leftspace"><%= current_user.volunteer.sex %></span>
					</div>
					<div class="row info-user">
						<strong>Nascimento: </strong>
						<span class="leftspace"><%= l current_user.volunteer.birth_date %></span>
					</div>
					<div class="row info-user">
							<strong>Sobre vocÃª: </strong>
							<span class="leftspace"><%= current_user.volunteer.observations %></span>
					</div>
				</div>
		</div>
</div>
