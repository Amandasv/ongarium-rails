<div class="container">
	<div class="panel ">
		<div>
			<h1><%= current_user.volunteer.name %>
				<% if current_user != nil && current_user.role == "volunteer" %>
			        <a href="<%=current_user.volunteer.id%>/edit" class="link-style" title="Editar">
			          <button type="button" class="btn btn-default" aria-label="Left Align">
			            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
			          </button>
			        </a>
	        	<%end%>
			</h1>		
		</div>
		<div class="panel-body detailopp">
			<div class="formsession">
				<div class="row">
					<strong>Telefone(s): </strong>
					<%= current_user.volunteer.phone %>
					<%= current_user.volunteer.phone1 %>
					<%= current_user.volunteer.phone2 %>
				</div>	
			</div>
			<div class="formsession">
				<div class="row">
					<strong>Email: </strong>
					<%= current_user.email %>
				</div>
			</div>
			<div class="formsession">
				<div class="row">
					<strong>Observações: </strong> 
				</div>
				<div class="row">
					<span class="leftspace"><%= current_user.volunteer.observations %></span> 
				</div>
			</div>
		</div>
		<div class="volunteer-opportunities">
			<div>
				<h3 class="">Oportunidades que você se candidatou:</h3>
			</div>
			<% current_user.volunteer.interests.each do |interest| %>	
				<div class="panel">
					<div class="row panel-body detailopp bs-callout bs-callout-info">
						<div class="row">
							<div class="col-lg-12 opportunity-title">
								<h3><%= interest.opportunity.title %></h3>
							</div>
						</div>
						<div class="row">
							<div class="col-lg-12 oppt-ngo">
								<span>Por <%= interest.opportunity.ngo.name %></span>
							</div>
						</div>
						<div class="row">
							<div class="col-lg-12 description">
								<%= interest.opportunity.description %>
							</div>
						</div>
						<div class="row">
							<div class="col-lg-4">
								<span><%= interest.opportunity.address.city %>, 
									<%= interest.opportunity.address.state %> </span>
							</div>
							<div class="col-lg-4 card-cause">
								<%= interest.opportunity.cause.name %>
							</div>
							<div class="col-lg-4">
						 		<%= link_to "Ver mais", interest.opportunity, :class=>"link-style btn btn-primary pull-right" %>
							</div>
						</div>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>
