<div class="container">
	<div class="panel ">
		<div class="row">
			<% if flash[:notice] != nil %>
			    <div class= "alert alert-success col-lg-offset-4 col-lg-4 centralize">
			      <p id="notice"><%= notice %></p>
			    </div>
		  	<%end%>
		</div>
		<div>
			<h1><%= current_user.volunteer.name %>
				<% if current_user != nil && current_user.role == "volunteer" %>
			        <a href="<%=current_user.volunteer.id%>/edit" class="link-style" title="Editar">
			          <button type="button" class="btn btn-default" aria-label="Left Align">
			            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
			          </button>
			        </a>
      	<%end%>
			</h1>
		</div>
		<div class="panel-body detailopp">
			<div class="formsession">
				<div class="row">
					<b>Telefone(s): </b>
					<%= @volunteer.phone1 %>
					<%= ", #{@volunteer.phone2}" unless @volunteer.phone2.empty?%></p>
				</div>
			</div>
			<div class="formsession">
				<div class="row">
					<strong>Avatares: </strong>
					<%= cl_image_tag("xwqiraah48rkjd1mpv21.png") if !@volunteer.user.photo? %>
					<%= image_tag (@volunteer.user.photo_url) if @volunteer.user.photo? %>
				</div>
			</div>
			<div class="formsession">
				<div class="row">
					<strong>Email: </strong>
					<%= current_user.email %>
				</div>
			</div>
			<div class="formsession">
				<div class="row">
					<strong>Observações: </strong>
				</div>
				<div class="row">
					<span class="leftspace"><%= current_user.volunteer.observations %></span>
				</div>
			</div>
			<div class="formsession">
				<div class="row">
					<strong>Sexo: </strong>
				</div>
				<div class="row">
					<span class="leftspace"><%= current_user.volunteer.sex %></span>
				</div>
			</div>
			<div class="formsession">
				<div class="row">
					<strong>Nascimento: </strong>
				</div>
				<div class="row">
					<span class="leftspace"><%= l current_user.volunteer.birth_date %></span>
				</div>
			</div>

		</div>
	</div>
</div>
